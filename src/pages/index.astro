---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>

    <div class="pb-12 mt-5">
      <div class="text-xl py-1">Hey there ðŸ‘‹</div>
      <div class="text-5xl font-bold">I'm Anunay Aatipamula</div>
      <div class="text-3xl py-3 font-bold">Software Engineer and Entrepreneur</div>
      <div class="py-2">
      </div>
      <div class="mt-8">
        <a class="btn btn-primary text-white transition ease-in-out hover:scale-[103%] hover:bg-accent hover:text-white" href="https://www.linkedin.com/in/anunay9/" target="_blank"> Let's connect!</a>
      </div>
    </div>

    <div>
      <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
    </div>

    <HorizontalCard
      title="Restaurant Recommendation Bot"
      img="/public/rasa.jpg"
      desc="Chatbot developed using Rasa NLP framework and Zomato API to recommend restaurants to users based on their preferences."
      url="https://github.com/anunay999/Restaurant-Recommendation-Chatbot"
      badge="NEW"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="AWS S3 Java Toolkit"
    img="/public/aws-toolbox.jpg"
    desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
    url="https://github.com/anunay999/aws-s3-file-transfer"
  />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="Neural Image Caption Generator"
    img="/public/lstm.jpg"
    desc="A neural image caption generator is an AI model that generates descriptive captions for images using deep learning techniques."
    url="https://github.com/anunay999/Neural-Caption-Generator"
  />


    <div>
      <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
    </div>

    {
      last_posts.map((post) => (
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
        />
        <div class="divider my-0"></div>
      ))
    }

</BaseLayout>
